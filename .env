# Database - Not needed in static mode
# DATABASE_URL=postgresql://username:password@ep-example.us-east-1.aws.neon.tech/dbname

# Static mode - Use static JSON files instead of database
VITE_STATIC_BUILD=true

# Replit environment variables (for local development)
REPLIT_DOMAINS=localhost:5000
REPL_ID=local-development
ISSUER_URL=https://replit.com/oidc

# OpenAI (optional for development)
OPENAI_API_KEY=your-openai-api-key-here

# Email (optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Session
SESSION_SECRET=development-secret-change-in-production

# Server
PORT=5000
NODE_ENV=development

# Object Storage (for static assets)
PUBLIC_OBJECT_SEARCH_PATHS=public/logos,public/videos
PRIVATE_OBJECT_DIR=.private